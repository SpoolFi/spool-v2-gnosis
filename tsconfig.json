{
	"compilerOptions": {
        "module": "CommonJS",
        "target": "es2021",
		"lib": ["ES2018"],
		"moduleResolution": "node",
		"strict": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
	},
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
